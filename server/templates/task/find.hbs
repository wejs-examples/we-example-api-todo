<div class="actions">
{{we-action-create-btn resourceName req}}
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>{{t 'actions'}}</th>
    </tr>
  </thead>
  <tbody>

{{#each data}}
  <tr>
    <td>
      {{#if done}}
        <form action="/task/{{id}}/edit" method="post">
          <input type="hidden" name="redirectTo" value="{{../req.url}}" >
          <input type="hidden" name="done" value="false">
          <button class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-check"></span>
          </button>
        </form>
      {{else}}
        <form action="/task/{{id}}/edit" method="post">
          <input type="hidden" name="redirectTo" value="{{../req.url}}" >
          <input type="hidden" name="done" value="true">
          <button class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-unchecked"></span>
          </button>
        </form>
      {{/if}}
    </td>
    <td>{{name}}</td>
    <td>
      {{we-action-edit-btn ../resourceName this ../req id}}
      {{we-action-delete-btn ../resourceName this ../req id}}
    </td>
  </tr>
{{/each}}

  </tbody>
  <tfoot>
    <td colspan="3">
      <a href="?done=all">All tasks</a> |
      <a href="?done=true">Completed tasks</a> |
      <a href="?done=false">Todo tasks</a>
    </td>
    <td colspan="3">
      {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
    </td>
  </tfoot>
</table>